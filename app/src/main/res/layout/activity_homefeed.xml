<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeFeed">

    <LinearLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/actionbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/menu"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:background="@drawable/menu" />

            <ImageView
                android:id="@+id/simpleLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:adjustViewBounds="false"
                android:background="@drawable/simple_logo" />

            <Button
                android:id="@+id/search"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@drawable/search" />

        </RelativeLayout>

        <TextView
            android:id="@+id/school"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:lineSpacingExtra="0.7sp"
            android:textColor="@color/light_olive_green"
            android:textSize="18sp"
            android:visibility="visible"
            tools:text="아주대 자취생들의 모임" />

        <HorizontalScrollView
            android:id="@+id/categories"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/cook"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_marginStart="20dp"
                        android:background="@drawable/recipies"
                        android:onClick="selectCategory" />

                    <Button
                        android:id="@+id/room"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_marginStart="20dp"
                        android:background="@drawable/roominfo"
                        android:onClick="selectCategory" />

                    <Button
                        android:id="@+id/activities"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_marginStart="20dp"
                        android:background="@drawable/schoolact"
                        android:onClick="selectCategory" />

                    <Button
                        android:id="@+id/tips"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_marginStart="20dp"
                        android:background="@drawable/tips"
                        android:onClick="selectCategory" />

                    <Button
                        android:id="@+id/button5"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_marginStart="20dp"
                        android:background="@drawable/tips" />

                    <Button
                        android:id="@+id/button6"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_marginStart="20dp"
                        android:background="@drawable/tips" />
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/topLayout">
    </FrameLayout>

    <Button
        android:id="@+id/addpost"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignRight="@id/fragment_container"
        android:layout_alignBottom="@id/fragment_container"
        android:background="@drawable/addpost"
        android:onClick="refresh" />

    <Button
        android:id="@+id/refresh"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/refresh"
        android:layout_alignRight="@id/fragment_container"
        android:layout_above="@id/addpost"/>

</RelativeLayout>